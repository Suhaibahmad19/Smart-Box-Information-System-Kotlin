<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424241">

    <ImageView
        android:id="@+id/logoTrackParcelPage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/white_trans"
        android:contentDescription="Logo" />

    <Button
        android:id="@+id/btnTrackParcel"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Track Parcel"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:layout_below="@id/logoTrackParcelPage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Log In"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:layout_below="@id/btnTrackParcel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnAdmin"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="I am admin"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:layout_below="@id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnRider"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="I am rider"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:layout_below="@id/btnAdmin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
