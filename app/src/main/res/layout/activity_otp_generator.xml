<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPGenerator">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- TextView to display generated OTP -->
        <TextView
            android:id="@+id/otpTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Generated OTP will appear here"
            android:textSize="18sp" />

        <!-- Button to generate OTP -->
        <Button
            android:id="@+id/generateOtpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Generate OTP" />

        <!-- EditText for OTP input -->
        <EditText
            android:id="@+id/inputOtpEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:hint="Enter OTP"
            android:inputType="number" />

        <!-- Button to verify OTP -->
        <Button
            android:id="@+id/verifyOtpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify OTP" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>